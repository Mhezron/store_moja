<div class="min-vh-100 d-flex align-items-center bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-5">
            
            <!-- Header Section -->
            <div class="text-center mb-5">
              <h1 class="display-4 fw-bold text-primary mb-3">Store Moja</h1>
              <p class="lead text-muted">Smart Inventory Management System</p>
            </div>

            <!-- Main Content -->
            <div class="text-center mb-4">
              <p class="mb-4">Streamline your inventory operations with powerful tools and real-time insights</p>
              
              <!-- Features -->
              <div class="row g-4 mb-5">
                <div class="col-md-4">
                  <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-box-seam fs-2 text-primary mb-2"></i>
                    <h5>Stock Management</h5>
                    <small class="text-muted">Track inventory levels</small>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-graph-up fs-2 text-primary mb-2"></i>
                    <h5>Analytics</h5>
                    <small class="text-muted">Data-driven insights</small>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-bell fs-2 text-primary mb-2"></i>
                    <h5>Alerts</h5>
                    <small class="text-muted">Real-time notifications</small>
                  </div>
                </div>
              </div>
            </div>

            <!-- Call to Action -->
            <div class="text-center">
              <%= link_to 'Login', new_user_session_path,
                  class: 'btn btn-primary btn-lg px-5 mb-3' %>
              <div class="mt-3">
                <small class="text-muted">
                  New to Store Moja? 
                  <%= link_to 'Create Account', new_user_registration_path,
                      class: 'text-primary text-decoration-none' %>
                </small>
              </div>
            </div>

          </div>
        </div>

        <!-- Additional Features -->
        <div class="row mt-4 g-4">
          <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-4">
                <i class="bi bi-shield-check text-success fs-4 mb-3"></i>
                <h5>Secure & Reliable</h5>
                <p class="text-muted small">Enterprise-grade security for your inventory data</p>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-4">
                <i class="bi bi-gear text-success fs-4 mb-3"></i>
                <h5>Easy Integration</h5>
                <p class="text-muted small">Seamlessly connects with your existing systems</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>